*
  box-sizing border-box

body, h1, h2, h3, h4, h5, h6 
  font-family 'Source Sans Pro'
  font-weight 300
  margin-top 0

.wrap
  max-width 60rem
  margin 2rem auto 0 auto
  
form
  margin 2rem 0

input[type="text"]
  width 100%
  display block
  padding 1.4rem 1rem
  font-size 1.1rem
  height 1.8rem
  color #888
  border 1px solid #CCC
  font-weight 300
  &:focus
    outline 0
    border 1px solid black

h5
  font-size 1.6rem
  margin-bottom 0.5rem

h6 
  font-size 0.9rem
  color #666
  

ul
  list-style-type none
  margin 0
  padding 0

li 
  font-size 1.2rem
  margin-bottom 0.4rem